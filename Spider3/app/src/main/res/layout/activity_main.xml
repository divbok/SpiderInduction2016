<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.spider3.MainActivity"
    android:background="#000000">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img1"
        android:id="@+id/imageview" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SLIDE SHOW"
        android:textSize="20sp"
        android:id="@+id/slide"
        android:onClick="slideclick"
        android:layout_below="@+id/imageview"/>
<Spinner
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:entries="@array/Musiclist"
    android:layout_below="@+id/slide"
    android:id="@+id/spin"
    android:spinnerMode="dropdown"
    android:background="#cd8913">
</Spinner>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:layout_below="@+id/spin"
        android:id="@+id/play"
        android:onClick="playclick"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:layout_toRightOf="@+id/play"
        android:layout_below="@+id/spin"
        android:onClick="stopclick"
        android:id="@+id/stop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="0:00:000"
        android:background="#ff0404" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable"
        android:layout_below="@+id/timer"
        android:enabled="true"
        android:id="@+id/enable"
        android:onClick="enable"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable"
        android:enabled="false"
        android:id="@+id/disable"
        android:layout_below="@+id/timer"
        android:layout_toRightOf="@+id/enable"
        android:onClick="disable"/>


</RelativeLayout>
